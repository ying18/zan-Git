/* pages/doctor/myServe/myServe.wxss */

.title-tabs-bar-container {
  display: flex;
  z-index: 99999;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #222; 
  text-align: center;
  color: #fff;
}

.title-tabs-bar-text {
  display: block;
  flex: 1;
  /*width: 50%;*/
  height: 100%;
}

.title-tabs-bar-text-selected {
  color: #E55400;
}


.container {
  display:flex;
flex-direction:column;
justify-content:space-between;

}

.serve_wrap{
  width: 100%;
  height: 100%;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}

.item-container{
  padding: 40rpx;
  border-bottom: 1px solid #FAF9F5;
  overflow: hidden;
  position: relative;
}
.item-container-avatar{
  width: 80rpx;
  height: 80rpx;
  float: left;
  border-radius: 100%;
}
.item-container-c{
  padding-left: 100rpx;
}
.item-container-r{
  float: right;
}
.item-container-time{
  color: #999;
  font-size: 11px;
}
.item-container-name{
  font-size: 14px;
  display: block
}
.item-container-massage{
  color: #777;
  display: block;
}
.item-container-new{
  background: #f00;
  height: 16rpx;
  width: 16rpx;
  position: absolute;
  top: 40rpx;
  left: 100rpx;
  border-radius: 100%;
}