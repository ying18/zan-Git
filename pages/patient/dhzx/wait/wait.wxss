/* pages/patient/dhzx/wait/wait.wxss */
@import '../dhzx.wxss';

.tit_div{
  font-size: 14px;
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #FAF9F5;
}
.cont_div{
  padding: 30rpx 40rpx;
}

.wt_fixed_bottom{
  background-color: #fff;
	padding: 40rpx 0;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	box-shadow: 0 -2px 2px 0 rgba(2, 2, 2, 0.1);
	text-align: center;
}
.btn{
  margin: 0 40rpx;
}


.vertical_process{
  border-left: 1px solid #ddd;
  padding-left: 30rpx;
}
.v_process_wrap{
  position: relative;
}
.v_process_icon{
width: 20rpx;
height: 20rpx;
position: absolute;
left: -40rpx;
top: 8rpx;
}
.v_process_cont{
  display: block;
  font-size: 14px;
  color: #999;
}
.v_process_cont_end{
  display: block;
  font-size: 16px;
  font-weight: bold;
}
.v_process_time{
  display: block;
  color: #999;
}
.v_process_tag{
  display: block;
  color: #E55400;
  opacity: 0.6;
}



.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }

.modal-body{
  margin:40rpx;
  }

.modal-content{
  overflow: hidden;
  padding: 40rpx;
  background-color: #fff;
  font-size: 14px;
  border-radius: 8rpx 8rpx 0 0;
  }
.modal-cont{
  overflow-y: auto;
  max-height: 800rpx;
}
  .modal-words{
  text-align: justify;
  }
  .modal-img{
    width: 100%;
    margin-top: 20rpx;
  }

.modal-btn{
  background-color: #fff;
  border-top: 1px solid #ddd;
  font-size: 14px;
  padding: 10rpx 0;
  border-radius: 0 0 8rpx 8rpx;
}
.knowBtn{
  border-width: 0;
  font-size: 14px;
  background: transparent;
  color: #E55400;
}
.knowBtn::after{
border: none;
}
