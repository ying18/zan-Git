/* pages/patient/twzx/twzx.wxss */

.appointment{
  padding: 40rpx;
  margin-bottom: 80rpx;
}

.textarea_wrp_textarea{
  width: 100%;
  height: 280rpx;
  font-size: 14px;
  line-height: 1.8;
  margin: 0;
  padding: 0;
}
.phcolor{
  color: #999;
}

.input_wrp{
  margin-top: 20rpx;
  padding: 20rpx 0 0 0;
  border-top: 1px solid #FAF9F5;
}
.input_wrp_input{
  font-size: 14px;
  line-height: 1.5;
  padding: 5px 0;
}

.appointment_btn{
  margin: 0 40rpx;
  border-radius: 100px;
  border: none;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  background-color: #E55400;
}

.rule_cont{
  padding: 80rpx 40rpx 0;
}
.rule_text{
  display: block;
  color: #999;
  margin-bottom: 4px;
  text-align: justify;
}


.order_process {
display: flex;
flex-wrap: nowrap;
padding: 40rpx 0;
background: linear-gradient(to right, #E55400, #FAA129);
}

.process_wrap {
display: flex;
flex-direction: column;
flex: 1;
align-items: center;
}
.process {
display: flex;
align-items: center;
width: 100%;
margin-top: 10rpx;
}
.process_icon {
width: 20rpx;
height: 20rpx;
}
.process_line {
background: rgba(255, 255, 255, 0.5);
flex: 1;
height: 1px;
}
.process_line_end{
background: #fff;
flex: 1;
height: 1px;
}
.process_name {
font-size: 12px;
color: rgba(255, 255, 255, 0.5);
}
.process_name_end {
font-size: 12px;
color: #fff;
}

.add_img{
  width: 160rpx;
  height: 160rpx;
  background-color: #ddd;
  margin: 0;
  padding: 0;
  border-radius: 0;
}
.add_img::after{
  border: none;
}
.add_img_i{
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx;
}