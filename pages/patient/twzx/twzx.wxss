.appointment{
  padding: 40rpx;
  margin-bottom: 80rpx;
}

.textarea_wrp_textarea{
  width: 100%;
  height: 280rpx;
  font-size: 14px;
  line-height: 1.8;
  margin: 0;
  padding: 0;
}
.phcolor{
  color: #999;
  line-height: 1.8;
}

.appointment_btn{
  margin: 0 40rpx;
  border-radius: 100px;
  border: none;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  background-color: #E55400;
}

.rule_cont{
  padding: 80rpx 40rpx 0;
}
.rule_text{
  display: block;
  color: #999;
  margin-bottom: 4px;
  text-align: justify;
}

.add_img{
  width: 160rpx;
  height: 160rpx;
  background-color: #ddd;
  margin: 0;
  padding: 0;
  border-radius: 0;
}
.add_img::after{
  border: none;
}
.add_img_i{
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx;
}
